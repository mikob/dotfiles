{
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.focusActiveEditorGroup"
    ],
    "terminal.integrated.scrollback": 10000,

    "mjml.previewBackgroundColor": "#ffffff",
    "html.mirrorCursorOnMatchingTag": false,
    "editor.selectionClipboard": false,

	"html.autoClosingTags": false,

    "vim.handleKeys": {
        "<C-w>": false,
        "<C-s>": false,
        "<C-c>": false,
        "<C-p>": false,
        "<C-h>": false,
    },

    "vim.easymotion": true,
    "vim.easymotionMarkerBackgroundColor": "#fcba03",
    "vim.easymotionMarkerForegroundColorOneChar": "#000000",
    "vim.easymotionMarkerForegroundColorTwoChar": "#333333",

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["Z", "Z"],
            "commands": [
                {
                    "command": ":wq"
                },
            ]
        },
        {
            "before": ["s"],
            "after": ["leader", "/"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": ["<leader>", "b"],
            "commands": [
                "bookmarks.list"
            ]
        }
    ],

    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--enable=W0614"
    ],

    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vim.leader": "<space>",
    "explorer.confirmDragAndDrop": false,
    "window.zoomLevel": 0,
    "keyboard.dispatch": "keyCode",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.tsdk": "node_modules/typescript/lib",
    "editor.lineNumbers": "relative",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "explorer.autoReveal": false,
    "vetur.useWorkspaceDependencies": true,
    "editor.minimap.enabled": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "python.languageServer": "Pylance",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "prettier.packageManager": "yarn",
    "prettier.tabWidth": 4,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "update.mode": "manual",
    "[vue]": {
        "editor.defaultFormatter": "octref.vetur"
    },
    "extensions.ignoreRecommendations": false,
    "javascript.autoClosingTags": false,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "spellright.addToSystemDictionary": true,
    "spellright.notificationClass": "information",
    "spellright.suggestionsInHints": false,
    "gitlens.codeLens.enabled": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "window.autoDetectColorScheme": true,
    "workbench.colorTheme": "Default Light+"
}