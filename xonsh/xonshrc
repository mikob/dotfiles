def cds(args):
	cd @(args[0]) && ls


aliases['cds'] = cds


def load_env_var_file(path):
    f = open(path, 'r')
    for line in f:
        processed = line.strip()
        parts = processed.split('=')
        if len(parts) > 1 and processed[0] != '#':
            ${parts[0]} = parts[1]
